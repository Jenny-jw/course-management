<h1>List of courses</h1>

<ul>
    <% @courses.each do |course| %>
        <p>
            <li>
                <%= link_to course.course_name, course %>
            </li>
            <ul>
                <% course.units.each do |unit| %>
                    <li><%= unit.unit_name %></li>
                <% end %>
            </ul>
        </p>
    <% end %>
</ul>

<%= link_to "Add a Course", new_course_path %>