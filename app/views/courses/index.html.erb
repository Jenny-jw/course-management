<div class="container mt-4">
    <h1 class="mb-4">List of Courses</h1>
    <h5 class="text-muted mb-4">Click the course name to see more details about the course and its units' information.</h5>

    <div class="container mt-4">
        <% @courses.each do |course| %>
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mt-2">
                        <%= link_to course.course_name, course, class: "text-decoration-none text-primary" %>
                    </h5>
                </div>
                <div class="card-body">
                    <% if course.units.any? %>
                        <ul class="list-unstyled" data-update-url="<%= sort_course_units_path(course) %>">
                            <% course.units.order(:position).each do |unit| %>
                            <li class="ms-3">
                                <%= unit.unit_name %>
                            </li>
                            <% end %>
                        </ul>
                    <% else %>
                        <p class="text-muted">No units available for this course.</p>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>


  <%= link_to "Add a Course", new_course_path, class: "btn btn-primary mt-4" %>
</div>
