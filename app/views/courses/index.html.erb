<h1>List of courses</h1>

<ul>
    <% @courses.each do |course| %>
        <p>
            <li>
                <%= link_to course.course_name, course %>
            </li>
            <% if course %>
                <ul class="units" data-update-url="<%= sort_course_units_path(course) %>">
                    <% course.units.each do |unit| %>
                        <li id="<%= unit.id %>">
                            <%= unit.unit_name %>
                        </li>
                    <% end %>
                </ul>
            <% else %>
                <p>Course not found or unavailable.</p>
            <% end %>
        </p>
    <% end %>
</ul>

<%= link_to "Add a Course", new_course_path %>