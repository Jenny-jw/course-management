<h1><%= @course.course_name %></h1>

<h3>Description</h3>
<p><%= @course.course_description %></p>

<h3>Teacher</h3>
<p><%= @course.teacher_name %></p>

<h2>Units</h2>
<% @course.units.each do |unit| %>
  <div>
    <h3><%= unit.unit_name %></h3>
    <p><strong>Description:</strong> <%= unit.unit_description.present? ? unit.unit_description : "No description provided." %></p>
    <p><strong>Content:</strong> <%= unit.unit_content %></p>
    <%# <%= link_to 'Edit this unit', edit_unit_path(unit), class: "btn btn-primary" %> %>
  </div>
  <hr>
<% end %>

<ul>
  <li><%= link_to "Edit Course", edit_course_path(@course) %></li>
  <li><%= link_to "Delete Course", course_path(@course), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete the course?"
                  } %></li>
</ul>