<%= form_with model: [course, unit], local: true, class: "mt-4" do |form| %>
  <div class="mb-3">
    <%= form.label :unit_name, class: "form-label" %>
    <%= form.text_field :unit_name, class: "form-control" %>
    <% unit.errors.full_messages_for(:unit_name).each do |message| %>
      <div class="text-danger mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :unit_description, class: "form-label" %>
    <%= form.text_area :unit_description, class: "form-control" %>
    <% unit.errors.full_messages_for(:unit_description).each do |message| %>
      <div class="text-danger mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :unit_content, class: "form-label" %>
    <%= form.text_area :unit_content, class: "form-control" %>
    <% unit.errors.full_messages_for(:unit_content).each do |message| %>
      <div class="text-danger mt-1"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Save Unit", class: "btn btn-primary" %>
  </div>
<% end %>
