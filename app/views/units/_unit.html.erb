<div>
  <div class="d-flex justify-content-between">
    <div>
      <h5 class="mb-3"><%= unit.unit_name %></h5>
      <p class="mb-2">
        <strong>Description: </strong> <%= unit.unit_description %><br>
      </p>
      <p class="mb-2">
        <strong>Content: </strong> <%= unit.unit_content %><br>
      </p>
    </div>
    <div>
      <%= link_to "Edit Unit", edit_course_unit_path(@course, unit), class: "btn btn-primary btn-sm me-2" %>
      <%= link_to "Delete Unit", course_unit_path(@course, unit),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this unit?" },
        class: "btn btn-danger btn-sm",
        turbo: false %>
    </div>
  </div>
</div>
